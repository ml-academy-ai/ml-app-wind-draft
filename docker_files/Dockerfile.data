FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install --no-cache-dir uv

# Data streaming service only needs minimal dependencies
# Using uv pip install to avoid installing the full project
RUN uv pip install --system --no-cache \
    pandas==2.2.2 \
    pyarrow==20.0.0 \
    pyyaml==6.0.2 \
    python-dateutil==2.8.2

# Set Python path (source code will be mounted as volume)
ENV PYTHONPATH=/app/src:$PYTHONPATH

CMD ["python", "--version"]

