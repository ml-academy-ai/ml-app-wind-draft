FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install --no-cache-dir uv

# UI service dependencies (source code will be mounted as volume)
# Using uv pip install to avoid installing the full project and main dependencies
RUN uv pip install --system --no-cache \
    dash>=3.3.0 \
    dash-bootstrap-components>=2.0.4 \
    mlflow==3.6.0 \
    pandas==2.2.2 \
    numpy==1.26.4 \
    plotly \
    pyyaml==6.0.2 \
    python-dateutil==2.8.2

# Set Python path (source code will be mounted as volume)
ENV PYTHONPATH=/app/src:$PYTHONPATH

CMD ["python", "--version"]

