FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install --no-cache-dir uv

# MLflow server only needs minimal dependencies
# Using uv pip install to avoid installing the full project
RUN uv pip install --system --no-cache \
    mlflow==3.6.0 \
    pyyaml==6.0.2

CMD ["mlflow", "server", "--help"]

